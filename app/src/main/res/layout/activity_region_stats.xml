<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegionStatsActivity">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#E6E5E5"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/c3"
                >

                <TextView
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@color/c3"
                    android:drawableRight="@drawable/ic_bar_chart"
                    android:text="FÃ©s-Meknes "
                    android:textColor="@color/c4"
                    android:textSize="22sp"
                    android:textStyle="bold|italic"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="378dp"
                    android:layout_height="300dp"
                    android:src="@drawable/chart"
                    android:paddingTop="60dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    >
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="290dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's statistics 27 April 2020"
                    android:textColor="#833A3939"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:layout_marginTop="267dp"
                android:paddingTop="60dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="15dp"
                    android:src="@color/c1"></ImageView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:src="@color/c2"></ImageView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:src="@color/c3"></ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="335dp"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:text="Active     "
                    android:textColor="#833A3939"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="50"
                    android:textSize="12sp"
                    android:layout_marginLeft="80dp"
                    android:textColor="#833A3939"

                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:src="@color/c1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:text="Recovred"
                    android:textColor="#833A3939"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="30"
                    android:textSize="12sp"
                    android:layout_marginLeft="80dp"
                    android:textColor="#833A3939"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:src="@color/c2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="385dp"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:text="Death      "
                    android:textColor="#833A3939"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="20"
                    android:textSize="12sp"
                    android:layout_marginLeft="80dp"
                    android:textColor="#833A3939"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:src="@color/c3"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/c1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:entries="@array/countries"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>


</LinearLayout>
